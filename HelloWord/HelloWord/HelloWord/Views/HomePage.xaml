<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:HelloWord"
             mc:Ignorable="d"
             x:Class="HelloWord.HomePage">
    <TabbedPage.ToolbarItems>

        <ToolbarItem Text="Add"
                     IconImageSource="ic_action_control_point.png"
                    Clicked="ToolbarItem_Clicked"
                     />
    </TabbedPage.ToolbarItems>
    <local:TransactionsPage
        Title=" Transactions"/>
    <local:ProfilePage
        Title="Profile"
        IconImageSource="ic_action_person.png"/>
    <local:MapPage
        Title="Map"
        IconImageSource="ic_action_map.png"/>
    <local:HistoryPage
        Title="History"
        IconImageSource="ic_action_home.png"/>
   
    
    

</TabbedPage>
    
